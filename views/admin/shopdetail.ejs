<% include ../partial/header%>
<!-- Content -->

<script type="text/javascript">
    $("#user").addClass("active");
</script>

<div class="page-content">

    <!-- Breadcrumb row -->
    <div class="breadcrumb-row">
        <div class="container">
            <ul class="list-inline">
                <li><a href="#">Home</a></li>
                <li>User</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb row END -->
    <div class="content-area">
        <div class="container">
            <div class="row">


                <!-- New Course -->
                <div class="col-sm-10 col-sm-offset-1">
                    <form method="post" class="p-a30 w3-form text-center text-center"action="/admin/updateitem/<%=shop._id %>?_method=PUT" method="POST">
                        <h4>Item Detail Management</h4>
                        <div class="panel panel-default">
                            <div class="panel-body form-horizontal payment-form">


                                <div class="form-group">
                                    <label for="concept" class="col-sm-3 control-label">Item Name</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control"  name="name" placeholder="<%=shop.name %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="description" class="col-sm-3 control-label">Image URL</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="img" placeholder="<%=shop.img %>">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="description" class="col-sm-3 control-label">Price</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="price" placeholder="<%=shop.price %>">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="description" class="col-sm-3 control-label">Change Availability</label>
                                    <div class="col-sm-8">

                                        <select id="avail" name="avail">
                                            <option>True</option>
                                            <option>False</option>

                                        </select>

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="description" class="col-sm-3 control-label">Current Available</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="price" placeholder="<%=shop.avail %>">
                                    </div>
                                </div>



                                <div class="form-group">
                                    <label for="description" class="col-sm-3 control-label">Detail</label>
                                    <div class="col-sm-8">
                                        <textarea name="pre" rows="4" class="form-control"  placeholder="<%=shop.detail%>"></textarea>
                                    </div>
                                </div>



                                <div class="form-group">
                                    <label for="amount" class="col-sm-3 control-label">Description</label>
                                    <div class="col-sm-8">
                                        <textarea name="des" rows="4" class="form-control" placeholder="<%=shop.des %>"></textarea>
                                    </div>


                                </div>









                                <div class="col-xs-12">
                                    <hr style="border:1px dashed #dddddd;">
                                    <button type="submit" class="btn btn-success btn-block">Update</button>
                                </div>


                            </div>
                        </div>
                    </form>
                </div> <!-- / New Course-->





            </div>
        </div>
    </div>
</div>
<!-- Content END-->
<!-- JavaScript  files ========================================= -->
<% include ../partial/footer%>